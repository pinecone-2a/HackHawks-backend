generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id                String     @id @default(nanoid())
  email             String
  password          String
  username          String
  bankCard          bankCard?
  recievedDonations donation[]
  profile           profile?
}

model donation {
  id                      String   @id @default(nanoid())
  amount                  Int
  specialMessage          String
  socialURLOrBuyMeACoffee String
  donorId                 Int
  recipentId              Int
  createdAt               DateTime @default(now())
  updatedAt               DateTime @default(now())
  userId                  String
  user                    user     @relation(fields: [userId], references: [id])
}

model profile {
  id              String @id @default(nanoid())
  name            String
  about           String
  avatarImage     String
  socialMediaURL  String
  backgroundImage String
  successMessage  String
  userId          String @unique
  user            user   @relation(fields: [userId], references: [id])
}

model bankCard {
  id         String   @id @default(nanoid())
  country    String
  firstName  String
  lastName   String
  cardNumber String
  expiryDate DateTime
  userId     String   @unique
  user       user     @relation(fields: [userId], references: [id])
}
